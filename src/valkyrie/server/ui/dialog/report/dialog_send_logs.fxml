<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" stylesheets="@../../../resources/dark_theme.css"
            xmlns="http://javafx.com/javafx" fx:controller="valkyrie.server.ui.dialog.report.SendLogsDialogController">
    <children>
        <VBox layoutX="250.0" layoutY="110.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER">
                    <children>
                        <Label style="-fx-font-size: 18;" text="What Happened?">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </HBox>
                <TextArea fx:id="taDescription" prefHeight="100.0" prefWidth="400.0">
                    <VBox.margin>
                        <Insets left="20.0" right="20.0"/>
                    </VBox.margin>
                </TextArea>
                <HBox alignment="BOTTOM_CENTER">
                    <children>
                        <Button fx:id="btnSendIt" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0"
                                text="Send It"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
